@{
    ViewData["Title"] = "Sipariş Oluştur";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h3 class="mb-0">Sipariş Oluştur</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Olustur" method="post">
                        @Html.AntiForgeryToken()

                        <div class="form-group mb-4">
                            <label for="adres" class="form-label">Teslimat Adresi</label>
                            <textarea id="adres" name="adres" class="form-control" rows="3" required></textarea>
                        </div>

                        <div class="alert alert-info">
                            <h5 class="alert-heading">Önemli Bilgiler</h5>
                            <p class="mb-0">
                                Siparişinizi tamamlamadan önce lütfen teslimat adresinizi kontrol ediniz.
                                Siparişiniz onaylandıktan sonra değişiklik yapılamaz.
                            </p>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-controller="Sepet" asp-action="Index" class="btn btn-outline-primary">
                                <i class="fas fa-arrow-left"></i> Sepete Dön
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-check"></i> Siparişi Onayla
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Sayfa yüklendiğinde animasyon
        document.addEventListener('DOMContentLoaded', function() {
            const card = document.querySelector('.card');
            card.style.opacity = '0';
            card.style.transform = 'translateY(20px)';
            setTimeout(() => {
                card.style.transition = 'all 0.5s ease';
                card.style.opacity = '1';
                card.style.transform = 'translateY(0)';
            }, 100);
        });
    </script>
} 