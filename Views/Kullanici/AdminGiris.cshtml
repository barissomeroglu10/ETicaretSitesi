@{
    ViewData["Title"] = "Admin Girişi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-danger text-white text-center">
                    <h4><i class="fas fa-shield-alt me-2"></i>Admin Girişi</h4>
                </div>
                <div class="card-body">
                    <form asp-action="AdminGiris" method="post">
                        @Html.AntiForgeryToken()
                        
                        <div asp-validation-summary="All" class="text-danger mb-3"></div>
                        
                        <div class="mb-3">
                            <label for="email" class="form-label">
                                <i class="fas fa-envelope me-1"></i>E-posta
                            </label>
                            <input type="email" class="form-control" id="email" name="email" required>
                        </div>
                        
                        <div class="mb-3">
                            <label for="sifre" class="form-label">
                                <i class="fas fa-lock me-1"></i>Şifre
                            </label>
                            <input type="password" class="form-control" id="sifre" name="sifre" required>
                        </div>
                        
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-sign-in-alt me-2"></i>Admin Girişi Yap
                            </button>
                        </div>
                    </form>
                    
                    <hr>
                    
                    <div class="text-center">
                        <a href="@Url.Action("Giris", "Kullanici")" class="btn btn-outline-secondary">
                            <i class="fas fa-user me-2"></i>Normal Kullanıcı Girişi
                        </a>
                    </div>
                    
                    <div class="mt-3 p-3 bg-light rounded">
                        <small class="text-muted">
                            <i class="fas fa-info-circle me-1"></i>
                            <strong>Test Admin Bilgileri:</strong><br>
                            E-posta: admin@example.com<br>
                            Şifre: Admin123!
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 